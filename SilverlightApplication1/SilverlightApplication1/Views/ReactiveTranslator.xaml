<navigation:Page x:Class="SilverlightApplication1.Views.ReactiveTranslator" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
                 Height="480"
           Title="ReactiveTranslator Page">
    <StackPanel Margin="10">
        <TextBlock Text="Bing Translate" FontSize="19" FontWeight="Bold" Margin="0,0,0,20" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Source language" Margin="0,2,10,0" />
            <ComboBox Name="cbLanguage" SelectedIndex="0" Width="100">
                <ComboBoxItem Content="English" />
                <ComboBoxItem Content="German" />
                <ComboBoxItem Content="Spanish" />
                <ComboBoxItem Content="French" />
                <ComboBoxItem Content="Italian" />
            </ComboBox>
        </StackPanel>
        <TextBox Name="txtTranslation" Margin="0,5,0,0" Width="300" HorizontalAlignment="Left" />
        <ListBox x:Name="Translations" Height="360" />
    </StackPanel>
</navigation:Page>
