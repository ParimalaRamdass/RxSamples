<Window x:Class="RxDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="138*" />
            <ColumnDefinition Width="140*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*" />
            <RowDefinition Height="42*" />
            <RowDefinition Height="36*" />
            <RowDefinition Height="114*" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>
        <Button Content="Unsubscribe" x:Name="btn" Grid.Row="0" Grid.ColumnSpan="2" />
        <TextBox MaxLines="20"  x:Name="txt" Grid.Row="1" Grid.ColumnSpan="2" />
    
        <TextBlock Grid.Row="2" Text="Sub A" />
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Sub B" />
        <ItemsControl ItemsSource="{Binding Path=InputKeys}" Grid.Row="3" Margin="0,0.5" Grid.RowSpan="1" />
        <ItemsControl ItemsSource="{Binding Path=InputKeys2}" Grid.Row="3" Grid.Column="1" Margin="0,0.5" Grid.RowSpan="1" />
        <TextBlock Text="{Binding SearchText}" FontSize="16" Grid.Row="4" Grid.ColumnSpan="2" />
    </Grid>
</Window>
